<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgCat"
        android:layout_width="229dp"
        android:layout_height="218dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hinh" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="157dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:text="Mèo khùng"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgCat"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imgCat"
        app:layout_constraintTop_toBottomOf="@+id/imgCat" />

    <RatingBar
        android:id="@+id/rtBar"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:rating="3"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvnewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/rtBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rtBar"
        app:layout_constraintTop_toBottomOf="@+id/rtBar" />

    <TextView
        android:id="@+id/tvreducePercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="-39%"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintStart_toEndOf="@+id/tvnewPrice"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="347dp" />

    <TextView
        android:id="@+id/tvpeopleRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(15)"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintStart_toEndOf="@+id/rtBar"
        tools:layout_editor_absoluteY="322dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>